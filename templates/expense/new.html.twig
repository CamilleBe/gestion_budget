{% block extra_styles %}
.suggestions-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
    gap: 1rem;
}

.suggestion-quick {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem;
    border: 2px solid transparent;
    border-radius: 12px;
    background: rgba(255, 140, 66, 0.05);
    color: #ff8c42;
    transition: all 0.3s ease;
    cursor: pointer;
    font-weight: 500;
}

.suggestion-quick:hover {
    background: rgba(255, 140, 66, 0.1);
    border-color: rgba(255, 140, 66, 0.3);
    transform: translateY(-2px);
}

.suggestion-quick.selected {
    background: var(--warning-gradient);
    color: white;
    border-color: #ff8c42;
}

.suggestion-quick i {
    font-size: 1.5rem;
    min-width: 24px;
}

.suggestion-title {
    font-weight: 600;
    margin-bottom: 0.25rem;
}

.suggestion-amount {
    font-size: 0.875rem;
    opacity: 0.8;
}

.form-text-modern {
    font-size: 0.875rem;
    color: #6c757d;
    margin-top: 0.5rem;
}

@media (max-width: 768px) {
    .suggestions-grid {
        grid-template-columns: 1fr 1fr;
    }
    
    .suggestion-quick {
        padding: 0.75rem;
        gap: 0.75rem;
    }
    
    .suggestion-quick i {
        font-size: 1.25rem;
    }
}
