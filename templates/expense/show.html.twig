{% extends 'base.html.twig' %}

{% block title %}{{ expense.description }} - {{ parent() }}{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="h2 mb-0">
                        <i class="bi bi-arrow-down-circle text-danger me-2"></i>
                        Détail de la dépense
                    </h1>
                    <p class="text-muted">{{ expense.description }}</p>
                </div>
                <div>
                    <a href="{{ path('app_period_show', {id: expense.period.id}) }}" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Retour à la période
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-info-circle"></i>
                        Informations détaillées
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <table class="table table-borderless">
                                <tbody>
                                    <tr>
                                        <th class="text-muted" style="width: 40%;">Description :</th>
                                        <td class="fw-bold">{{ expense.description }}</td>
                                    </tr>
                                    <tr>
                                        <th class="text-muted">Montant :</th>
                                        <td>
                                            <span class="h4 text-danger mb-0">
                                                <i class="bi bi-currency-euro"></i>
                                                {{ expense.amount|number_format(2, ',', ' ') }}
                                            </span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th class="text-muted">Date :</th>
                                        <td>
                                            <i class="bi bi-calendar3"></i>
                                            {{ expense.date|date('d/m/Y') }}
                                            <small class="text-muted">
                                                ({{ expense.date|date('l', 'Europe/Paris')|trans }})
                                            </small>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th class="text-muted">Catégorie :</th>
                                        <td>
                                            <span class="badge bg-danger bg-opacity-75 fs-6">
                                                <i class="bi bi-tag"></i>
                                                {{ expense.category.name }}
                                            </span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th class="text-muted">Période :</th>
                                        <td>
                                            <a href="{{ path('app_period_show', {id: expense.period.id}) }}" class="text-decoration-none">
                                                <i class="bi bi-calendar-event"></i>
                                                {{ expense.period.name }}
                                            </a>
                                            <br>
                                            <small class="text-muted">
                                                {{ expense.period.startDate|date('d/m/Y') }} - {{ expense.period.endDate|date('d/m/Y') }}
                                            </small>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="col-md-4 text-center">
                            <div class="bg-danger bg-opacity-10 rounded p-3">
                                <i class="bi bi-arrow-down-circle text-danger" style="font-size: 3rem;"></i>
                                <p class="text-danger fw-bold mb-0 mt-2">DÉPENSE</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h6 class="mb-0">
                        <i class="bi bi-gear"></i>
                        Actions
                    </h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="{{ path('app_expense_edit', {id: expense.id}) }}" class="btn btn-outline-primary">
                            <i class="bi bi-pencil-square"></i> Modifier
                        </a>
                        
                        <form method="post" action="{{ path('app_expense_delete', {'id': expense.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette dépense ?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ expense.id) }}">
                            <button class="btn btn-outline-danger w-100">
                                <i class="bi bi-trash"></i> Supprimer
                            </button>
                        </form>
                        
                        <hr>
                        
                        <a href="{{ path('app_expense_index') }}" class="btn btn-outline-secondary">
                            <i class="bi bi-list"></i> Toutes les dépenses
                        </a>
                        
                        <a href="{{ path('app_expense_new', {period: expense.period.id}) }}" class="btn btn-outline-danger">
                            <i class="bi bi-plus-circle"></i> Nouvelle dépense
                        </a>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm mt-3">
                <div class="card-header bg-light">
                    <h6 class="mb-0">
                        <i class="bi bi-bar-chart"></i>
                        Statistiques de la période
                    </h6>
                </div>
                <div class="card-body">
                    {% set totalIncomes = 0 %}
                    {% set totalExpenses = 0 %}
                    {% for income in expense.period.incomes %}
                        {% set totalIncomes = totalIncomes + income.amount %}
                    {% endfor %}
                    {% for otherExpense in expense.period.expenses %}
                        {% set totalExpenses = totalExpenses + otherExpense.amount %}
                    {% endfor %}

                    <div class="mb-3">
                        <small class="text-muted d-block">Total revenus :</small>
                        <span class="text-success fw-bold">{{ totalIncomes|number_format(2, ',', ' ') }} €</span>
                    </div>
                    
                    <div class="mb-3">
                        <small class="text-muted d-block">Total dépenses :</small>
                        <span class="text-danger fw-bold">{{ totalExpenses|number_format(2, ',', ' ') }} €</span>
                    </div>
                    
                    <hr>
                    
                    <div>
                        <small class="text-muted d-block">Solde :</small>
                        {% set balance = totalIncomes - totalExpenses %}
                        <span class="fw-bold {{ balance >= 0 ? 'text-success' : 'text-danger' }}">
                            {{ balance|number_format(2, ',', ' ') }} €
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 