{% extends 'base.html.twig' %}

{% block title %}{{ category.name }} - {{ parent() }}{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="h2 mb-0">
                        <i class="bi bi-tags text-primary me-2"></i>
                        Détail de la catégorie
                    </h1>
                    <p class="text-muted">
                        {{ category.name }}
                        <span class="badge bg-{{ category.type.value == 'INCOME' ? 'success' : 'danger' }} ms-2">
                            {{ category.type.value == 'INCOME' ? 'Revenus' : 'Dépenses' }}
                        </span>
                    </p>
                </div>
                <div>
                    <a href="{{ path('app_category_index') }}" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Retour
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-info-circle"></i>
                        Informations de la catégorie
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <table class="table table-borderless">
                                <tbody>
                                    <tr>
                                        <th class="text-muted" style="width: 40%;">Nom :</th>
                                        <td class="fw-bold">{{ category.name }}</td>
                                    </tr>
                                    <tr>
                                        <th class="text-muted">Type :</th>
                                        <td>
                                            <span class="badge bg-{{ category.type.value == 'INCOME' ? 'success' : 'danger' }} fs-6">
                                                <i class="bi bi-{{ category.type.value == 'INCOME' ? 'arrow-up-circle' : 'arrow-down-circle' }}"></i>
                                                {{ category.type.value == 'INCOME' ? 'Revenus' : 'Dépenses' }}
                                            </span>
                                        </td>
                                    </tr>
                                    {% if category.description %}
                                    <tr>
                                        <th class="text-muted">Description :</th>
                                        <td>{{ category.description }}</td>
                                    </tr>
                                    {% endif %}
                                    <tr>
                                        <th class="text-muted">Utilisation :</th>
                                        <td>
                                            {% set totalUsage = category.incomes|length + category.expenses|length %}
                                            {% if totalUsage > 0 %}
                                                <span class="badge bg-info">{{ totalUsage }} utilisation{{ totalUsage > 1 ? 's' : '' }}</span>
                                            {% else %}
                                                <span class="badge bg-secondary">Non utilisée</span>
                                            {% endif %}
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="col-md-4 text-center">
                            <div class="bg-primary bg-opacity-10 rounded p-3">
                                <i class="bi bi-tags text-primary" style="font-size: 3rem;"></i>
                                <p class="text-primary fw-bold mb-0 mt-2">CATÉGORIE</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Utilisation de la catégorie -->
            {% if category.incomes|length > 0 or category.expenses|length > 0 %}
            <div class="card shadow-sm mt-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="bi bi-list-check"></i>
                        Utilisation de cette catégorie
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        {% if category.incomes|length > 0 %}
                        <div class="col-md-6">
                            <h6 class="text-success mb-3">
                                <i class="bi bi-arrow-up-circle"></i>
                                Revenus ({{ category.incomes|length }})
                            </h6>
                            <div class="list-group list-group-flush">
                                {% for income in category.incomes[:5] %}
                                <div class="list-group-item px-0 py-2 border-0">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <strong>{{ income.description }}</strong>
                                            <br>
                                            <small class="text-muted">{{ income.date|date('d/m/Y') }}</small>
                                        </div>
                                        <span class="text-success fw-bold">{{ income.amount|number_format(2, ',', ' ') }} €</span>
                                    </div>
                                </div>
                                {% endfor %}
                                {% if category.incomes|length > 5 %}
                                <div class="list-group-item px-0 py-2 border-0">
                                    <small class="text-muted">... et {{ category.incomes|length - 5 }} autre{{ category.incomes|length - 5 > 1 ? 's' : '' }}</small>
                                </div>
                                {% endif %}
                            </div>
                        </div>
                        {% endif %}

                        {% if category.expenses|length > 0 %}
                        <div class="col-md-6">
                            <h6 class="text-danger mb-3">
                                <i class="bi bi-arrow-down-circle"></i>
                                Dépenses ({{ category.expenses|length }})
                            </h6>
                            <div class="list-group list-group-flush">
                                {% for expense in category.expenses[:5] %}
                                <div class="list-group-item px-0 py-2 border-0">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <strong>{{ expense.description }}</strong>
                                            <br>
                                            <small class="text-muted">{{ expense.date|date('d/m/Y') }}</small>
                                        </div>
                                        <span class="text-danger fw-bold">{{ expense.amount|number_format(2, ',', ' ') }} €</span>
                                    </div>
                                </div>
                                {% endfor %}
                                {% if category.expenses|length > 5 %}
                                <div class="list-group-item px-0 py-2 border-0">
                                    <small class="text-muted">... et {{ category.expenses|length - 5 }} autre{{ category.expenses|length - 5 > 1 ? 's' : '' }}</small>
                                </div>
                                {% endif %}
                            </div>
                        </div>
                        {% endif %}
                    </div>
                </div>
            </div>
            {% endif %}
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h6 class="mb-0">
                        <i class="bi bi-gear"></i>
                        Actions
                    </h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="{{ path('app_category_edit', {id: category.id}) }}" class="btn btn-outline-primary">
                            <i class="bi bi-pencil-square"></i> Modifier
                        </a>
                        
                        {% if category.incomes|length == 0 and category.expenses|length == 0 %}
                        <form method="post" action="{{ path('app_category_delete', {'id': category.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette catégorie ?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                            <button class="btn btn-outline-danger w-100">
                                <i class="bi bi-trash"></i> Supprimer
                            </button>
                        </form>
                        {% else %}
                        <button class="btn btn-outline-danger w-100" disabled title="Cette catégorie est utilisée et ne peut pas être supprimée">
                            <i class="bi bi-trash"></i> Supprimer
                        </button>
                        {% endif %}
                        
                        <hr>
                        
                        <a href="{{ path('app_category_index') }}" class="btn btn-outline-secondary">
                            <i class="bi bi-list"></i> Toutes les catégories
                        </a>
                        
                        <a href="{{ path('app_category_new') }}" class="btn btn-outline-primary">
                            <i class="bi bi-plus-circle"></i> Nouvelle catégorie
                        </a>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm mt-3">
                <div class="card-header bg-light">
                    <h6 class="mb-0">
                        <i class="bi bi-bar-chart"></i>
                        Statistiques
                    </h6>
                </div>
                <div class="card-body">
                    {% if category.type.value == 'INCOME' %}
                        {% set totalAmount = 0 %}
                        {% for income in category.incomes %}
                            {% set totalAmount = totalAmount + income.amount %}
                        {% endfor %}
                        
                        <div class="mb-3">
                            <small class="text-muted d-block">Nombre de revenus :</small>
                            <span class="text-success fw-bold">{{ category.incomes|length }}</span>
                        </div>
                        
                        <div>
                            <small class="text-muted d-block">Total des revenus :</small>
                            <span class="text-success fw-bold">{{ totalAmount|number_format(2, ',', ' ') }} €</span>
                        </div>
                    {% else %}
                        {% set totalAmount = 0 %}
                        {% for expense in category.expenses %}
                            {% set totalAmount = totalAmount + expense.amount %}
                        {% endfor %}
                        
                        <div class="mb-3">
                            <small class="text-muted d-block">Nombre de dépenses :</small>
                            <span class="text-danger fw-bold">{{ category.expenses|length }}</span>
                        </div>
                        
                        <div>
                            <small class="text-muted d-block">Total des dépenses :</small>
                            <span class="text-danger fw-bold">{{ totalAmount|number_format(2, ',', ' ') }} €</span>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 