{% block body %}
<div class="row">
    <!-- Cat√©gories de revenus -->
    <div class="col-lg-6">
        <div class="modern-card">
            <div class="card-header-modern">
                <h3 class="card-title-modern">
                    <i class="bi bi-arrow-up-circle text-success me-2"></i>Cat√©gories de revenus
                </h3>
                <span class="badge-modern" style="background: var(--success-gradient); color: white;">
                    {% set incomeCategories = categories|filter(c => c.type.value == 'INCOME') %}
                    {{ incomeCategories|length }} cat√©gorie{{ incomeCategories|length > 1 ? 's' : '' }}
                </span>
            </div>

            {% if incomeCategories|length > 0 %}
                <div class="category-grid">
                    {% for category in incomeCategories %}
                    <div class="category-item income-category">
                        <div class="category-icon">
                            <i class="bi bi-arrow-up-circle"></i>
                        </div>
                        <div class="category-content">
                            <h6 class="category-name">{{ category.name }}</h6>
                            <small class="text-muted">{{ category.incomes|length }} revenu{{ category.incomes|length > 1 ? 's' : '' }}</small>
                        </div>
                        <div class="category-actions">
                            <a href="{{ path('app_category_show', {id: category.id}) }}" 
                               class="btn btn-sm btn-outline-primary" title="Voir">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a href="{{ path('app_category_edit', {id: category.id}) }}" 
                               class="btn btn-sm btn-outline-warning" title="Modifier">
                                <i class="bi bi-pencil"></i>
                            </a>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            {% else %}
                <div class="text-center py-4">
                    <i class="bi bi-folder-plus text-muted" style="font-size: 3rem;"></i>
                    <p class="text-muted mt-3 mb-3">Aucune cat√©gorie de revenu</p>
                    <a href="{{ path('app_category_new') }}" class="btn-modern btn-success-modern btn-sm">
                        <i class="bi bi-plus"></i>Cr√©er une cat√©gorie
                    </a>
                </div>
            {% endif %}
        </div>
    </div>

    <!-- Cat√©gories de d√©penses -->
    <div class="col-lg-6">
        <div class="modern-card">
            <div class="card-header-modern">
                <h3 class="card-title-modern">
                    <i class="bi bi-arrow-down-circle text-danger me-2"></i>Cat√©gories de d√©penses
                </h3>
                <span class="badge-modern" style="background: var(--warning-gradient); color: white;">
                    {% set expenseCategories = categories|filter(c => c.type.value == 'EXPENSE') %}
                    {{ expenseCategories|length }} cat√©gorie{{ expenseCategories|length > 1 ? 's' : '' }}
                </span>
            </div>

            {% if expenseCategories|length > 0 %}
                <div class="category-grid">
                    {% for category in expenseCategories %}
                    <div class="category-item expense-category">
                        <div class="category-icon">
                            <i class="bi bi-arrow-down-circle"></i>
                        </div>
                        <div class="category-content">
                            <h6 class="category-name">{{ category.name }}</h6>
                            <small class="text-muted">{{ category.expenses|length }} d√©pense{{ category.expenses|length > 1 ? 's' : '' }}</small>
                        </div>
                        <div class="category-actions">
                            <a href="{{ path('app_category_show', {id: category.id}) }}" 
                               class="btn btn-sm btn-outline-primary" title="Voir">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a href="{{ path('app_category_edit', {id: category.id}) }}" 
                               class="btn btn-sm btn-outline-warning" title="Modifier">
                                <i class="bi bi-pencil"></i>
                            </a>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            {% else %}
                <div class="text-center py-4">
                    <i class="bi bi-folder-plus text-muted" style="font-size: 3rem;"></i>
                    <p class="text-muted mt-3 mb-3">Aucune cat√©gorie de d√©pense</p>
                    <a href="{{ path('app_category_new') }}" class="btn-modern btn-warning-modern btn-sm">
                        <i class="bi bi-plus"></i>Cr√©er une cat√©gorie
                    </a>
                </div>
            {% endif %}
        </div>
    </div>
</div>

{% if categories|length > 0 %}
<div class="modern-card mt-4">
    <div class="card-header-modern">
        <h3 class="card-title-modern">
            <i class="bi bi-list me-2"></i>Toutes les cat√©gories
        </h3>
    </div>
    <div class="table-modern">
        <table class="table table-hover mb-0">
            <thead>
                <tr>
                    <th><i class="bi bi-tag me-2"></i>Nom</th>
                    <th><i class="bi bi-arrow-up-down me-2"></i>Type</th>
                    <th><i class="bi bi-files me-2"></i>Transactions</th>
                    <th><i class="bi bi-currency-euro me-2"></i>Total</th>
                    <th><i class="bi bi-gear me-2"></i>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for category in categories %}
                <tr>
                    <td>
                        <div class="d-flex align-items-center">
                            <div class="category-icon-small me-2">
                                {% if category.type.value == 'INCOME' %}
                                    <i class="bi bi-arrow-up-circle text-success"></i>
                                {% else %}
                                    <i class="bi bi-arrow-down-circle text-danger"></i>
                                {% endif %}
                            </div>
                            <strong>{{ category.name }}</strong>
                        </div>
                    </td>
                    <td>
                        {% if category.type.value == 'INCOME' %}
                            <span class="badge-modern" style="background: rgba(40, 167, 69, 0.1); color: #28a745;">
                                Revenu
                            </span>
                        {% else %}
                            <span class="badge-modern" style="background: rgba(220, 53, 69, 0.1); color: #dc3545;">
                                D√©pense
                            </span>
                        {% endif %}
                    </td>
                    <td>
                        {% if category.type.value == 'INCOME' %}
                            {{ category.incomes|length }} transaction{{ category.incomes|length > 1 ? 's' : '' }}
                        {% else %}
                            {{ category.expenses|length }} transaction{{ category.expenses|length > 1 ? 's' : '' }}
                        {% endif %}
                    </td>
                    <td>
                        {% set totalAmount = 0 %}
                        {% if category.type.value == 'INCOME' %}
                            {% for income in category.incomes %}
                                {% set totalAmount = totalAmount + income.amount %}
                            {% endfor %}
                            <span class="fw-bold text-success">+{{ totalAmount|number_format(0, ',', ' ') }}‚Ç¨</span>
                        {% else %}
                            {% for expense in category.expenses %}
                                {% set totalAmount = totalAmount + expense.amount %}
                            {% endfor %}
                            <span class="fw-bold text-danger">-{{ totalAmount|number_format(0, ',', ' ') }}‚Ç¨</span>
                        {% endif %}
                    </td>
                    <td>
                        <div class="d-flex gap-2">
                            <a href="{{ path('app_category_show', {id: category.id}) }}" 
                               class="btn btn-sm btn-outline-primary" title="Voir">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a href="{{ path('app_category_edit', {id: category.id}) }}" 
                               class="btn btn-sm btn-outline-warning" title="Modifier">
                                <i class="bi bi-pencil"></i>
                            </a>
                        </div>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endif %}
{% endblock %}

{% block extra_styles %}
.category-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
}

.category-item {
    display: flex;
    align-items: center;
    padding: 1rem;
    border-radius: 12px;
    transition: all 0.3s ease;
    border: 2px solid transparent;
}

.category-item:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
}

.income-category {
    background: rgba(40, 167, 69, 0.05);
}

.income-category:hover {
    border-color: rgba(40, 167, 69, 0.2);
}

.expense-category {
    background: rgba(220, 53, 69, 0.05);
}

.expense-category:hover {
    border-color: rgba(220, 53, 69, 0.2);
}

.category-icon {
    width: 40px;
    height: 40px;
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 1rem;
    font-size: 1.2rem;
}

.income-category .category-icon {
    background: rgba(40, 167, 69, 0.1);
    color: #28a745;
}

.expense-category .category-icon {
    background: rgba(220, 53, 69, 0.1);
    color: #dc3545;
}

.category-content {
    flex: 1;
}

.category-name {
    margin: 0 0 0.25rem 0;
    font-weight: 600;
    color: #2c3e50;
}

.category-actions {
    display: flex;
    gap: 0.5rem;
}

.category-icon-small {
    font-size: 1.1rem;
}

@media (max-width: 768px) {
    .category-item {
        padding: 0.75rem;
    }
    
    .category-icon {
        width: 35px;
        height: 35px;
        margin-right: 0.75rem;
    }
}
{% endblock %} 