{% extends 'base_modern.html.twig' %}

{% block title %}{{ income.description }} - Budget Manager{% endblock %}

{% block header %}
<div class="page-header">
    <h1 class="page-title">{{ income.description }} üí∞</h1>
    <p class="page-subtitle">
        D√©tail du revenu du {{ income.date|date('d/m/Y') }} - {{ income.amount|number_format(2, ',', ' ') }}‚Ç¨
    </p>
    <div class="d-flex gap-3 flex-wrap">
        <a href="{{ path('app_income_edit', {id: income.id}) }}" class="btn-modern btn-warning-modern">
            <i class="bi bi-pencil"></i>Modifier
        </a>
        {% if income.period %}
            <a href="{{ path('app_period_show', {id: income.period.id}) }}" class="btn-modern btn-info-modern">
                <i class="bi bi-calendar-event"></i>Voir la p√©riode
            </a>
        {% endif %}
        <a href="{{ path('app_income_index') }}" class="btn-modern">
            <i class="bi bi-arrow-left"></i>Retour aux revenus
        </a>
    </div>
</div>
{% endblock %}

{% block body %}
<div class="row">
    <!-- Informations principales -->
    <div class="col-lg-4">
        <div class="modern-card">
            <div class="card-header-modern">
                <h3 class="card-title-modern">
                    <i class="bi bi-info-circle me-2"></i>Informations
                </h3>
            </div>
            
            <div class="income-info-section">
                <div class="info-item">
                    <div class="info-label">Description</div>
                    <div class="info-value">{{ income.description }}</div>
                </div>
                
                <div class="info-item">
                    <div class="info-label">Montant</div>
                    <div class="info-value">
                        <span class="amount-display success">
                            +{{ income.amount|number_format(2, ',', ' ') }}‚Ç¨
                        </span>
                    </div>
                </div>
                
                <div class="info-item">
                    <div class="info-label">Date</div>
                    <div class="info-value">
                        <i class="bi bi-calendar3 me-1"></i>
                        {{ income.date|date('d/m/Y') }}
                        <br>
                        <small class="text-muted">{{ income.date|date('l', 'Europe/Paris') }}</small>
                    </div>
                </div>
                
                <div class="info-item">
                    <div class="info-label">Cat√©gorie</div>
                    <div class="info-value">
                        <a href="{{ path('app_category_show', {id: income.category.id}) }}" 
                           class="badge-modern" style="background: var(--success-gradient); color: white; text-decoration: none;">
                            <i class="bi bi-tag me-1"></i>{{ income.category.name }}
                        </a>
                    </div>
                </div>
                
                {% if income.period %}
                <div class="info-item">
                    <div class="info-label">P√©riode</div>
                    <div class="info-value">
                        <a href="{{ path('app_period_show', {id: income.period.id}) }}" 
                           class="badge-modern" style="background: var(--primary-gradient); color: white; text-decoration: none;">
                            <i class="bi bi-calendar-event me-1"></i>{{ income.period.name }}
                        </a>
                        <br>
                        <small class="text-muted">
                            {{ income.period.startDate|date('d/m/Y') }} - {{ income.period.endDate|date('d/m/Y') }}
                        </small>
                    </div>
                </div>
                {% endif %}
            </div>
        </div>
        
        <!-- Actions -->
        <div class="modern-card">
            <div class="card-header-modern">
                <h3 class="card-title-modern">
                    <i class="bi bi-gear me-2"></i>Actions
                </h3>
            </div>
            
            <div class="actions-section">
                <a href="{{ path('app_income_edit', {id: income.id}) }}" class="action-btn warning">
                    <i class="bi bi-pencil"></i>
                    <div>
                        <div class="action-title">Modifier</div>
                        <div class="action-subtitle">Modifier ce revenu</div>
                    </div>
                </a>
                
                {% if income.period %}
                <a href="{{ path('app_income_new', {period: income.period.id}) }}" class="action-btn success">
                    <i class="bi bi-plus-circle"></i>
                    <div>
                        <div class="action-title">Nouveau revenu</div>
                        <div class="action-subtitle">Ajouter √† cette p√©riode</div>
                    </div>
                </a>
                {% endif %}
                
                <button type="button" class="action-btn danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                    <i class="bi bi-trash"></i>
                    <div>
                        <div class="action-title">Supprimer</div>
                        <div class="action-subtitle">Supprimer d√©finitivement</div>
                    </div>
                </button>
            </div>
        </div>
    </div>
    
    <!-- Statistiques et p√©riode -->
    <div class="col-lg-8">
        {% if income.period %}
        <div class="modern-card">
            <div class="card-header-modern">
                <h3 class="card-title-modern">
                    <i class="bi bi-bar-chart me-2"></i>Statistiques de la p√©riode "{{ income.period.name }}"
                </h3>
            </div>
            
            <div class="stats-overview">
                {% set totalIncomes = 0 %}
                {% set totalExpenses = 0 %}
                {% for periodIncome in income.period.incomes %}
                    {% set totalIncomes = totalIncomes + periodIncome.amount %}
                {% endfor %}
                {% for expense in income.period.expenses %}
                    {% set totalExpenses = totalExpenses + expense.amount %}
                {% endfor %}
                {% set balance = totalIncomes - totalExpenses %}
                
                <div class="row text-center">
                    <div class="col-md-3">
                        <div class="stat-card-large success">
                            <div class="stat-icon">
                                <i class="bi bi-arrow-up-circle"></i>
                            </div>
                            <div class="stat-content">
                                <div class="stat-value">{{ totalIncomes|number_format(0, ',', ' ') }}‚Ç¨</div>
                                <div class="stat-label">Total revenus</div>
                                <div class="stat-count">{{ income.period.incomes|length }} transaction{{ income.period.incomes|length > 1 ? 's' : '' }}</div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-3">
                        <div class="stat-card-large danger">
                            <div class="stat-icon">
                                <i class="bi bi-arrow-down-circle"></i>
                            </div>
                            <div class="stat-content">
                                <div class="stat-value">{{ totalExpenses|number_format(0, ',', ' ') }}‚Ç¨</div>
                                <div class="stat-label">Total d√©penses</div>
                                <div class="stat-count">{{ income.period.expenses|length }} transaction{{ income.period.expenses|length > 1 ? 's' : '' }}</div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-3">
                        <div class="stat-card-large {{ balance >= 0 ? 'success' : 'danger' }}">
                            <div class="stat-icon">
                                <i class="bi bi-{{ balance >= 0 ? 'plus' : 'dash' }}-circle"></i>
                            </div>
                            <div class="stat-content">
                                <div class="stat-value">{{ balance|number_format(0, ',', ' ') }}‚Ç¨</div>
                                <div class="stat-label">Solde</div>
                                <div class="stat-count">{{ balance >= 0 ? 'Positif' : 'N√©gatif' }}</div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-3">
                        <div class="stat-card-large info">
                            <div class="stat-icon">
                                <i class="bi bi-percent"></i>
                            </div>
                            <div class="stat-content">
                                {% set percentage = totalIncomes > 0 ? ((income.amount / totalIncomes) * 100) : 0 %}
                                <div class="stat-value">{{ percentage|number_format(1) }}%</div>
                                <div class="stat-label">Part de ce revenu</div>
                                <div class="stat-count">du total</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Autres revenus de la p√©riode -->
        <div class="modern-card">
            <div class="card-header-modern">
                <h3 class="card-title-modern">
                    <i class="bi bi-list me-2"></i>Autres revenus de cette p√©riode
                </h3>
                <div class="d-flex gap-2">
                    <a href="{{ path('app_income_new', {period: income.period.id}) }}" 
                       class="btn btn-sm btn-outline-success" style="border-radius: 8px;">
                        <i class="bi bi-plus"></i>Nouveau revenu
                    </a>
                </div>
            </div>
            
            {% set otherIncomes = [] %}
            {% for periodIncome in income.period.incomes %}
                {% if periodIncome.id != income.id %}
                    {% set otherIncomes = otherIncomes|merge([periodIncome]) %}
                {% endif %}
            {% endfor %}
            
            {% if otherIncomes|length > 0 %}
                <div class="table-modern">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>Description</th>
                                <th>Date</th>
                                <th>Cat√©gorie</th>
                                <th>Montant</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for otherIncome in otherIncomes|slice(0, 10) %}
                            <tr>
                                <td><strong>{{ otherIncome.description }}</strong></td>
                                <td>{{ otherIncome.date|date('d/m/Y') }}</td>
                                <td>
                                    <span class="badge-modern" style="background: rgba(67, 233, 123, 0.1); color: #43e97b;">
                                        {{ otherIncome.category.name }}
                                    </span>
                                </td>
                                <td>
                                    <span class="fw-bold text-success">+{{ otherIncome.amount|number_format(0, ',', ' ') }}‚Ç¨</span>
                                </td>
                                <td>
                                    <div class="d-flex gap-1">
                                        <a href="{{ path('app_income_show', {id: otherIncome.id}) }}" 
                                           class="btn btn-sm btn-outline-primary" title="Voir">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a href="{{ path('app_income_edit', {id: otherIncome.id}) }}" 
                                           class="btn btn-sm btn-outline-warning" title="Modifier">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                
                {% if otherIncomes|length > 10 %}
                <div class="text-center py-3">
                    <a href="{{ path('app_period_show', {id: income.period.id}) }}" class="btn btn-outline-primary">
                        <i class="bi bi-eye me-2"></i>Voir tous les revenus ({{ otherIncomes|length - 10 }} de plus)
                    </a>
                </div>
                {% endif %}
            {% else %}
                <div class="text-center py-5">
                    <i class="bi bi-wallet-fill display-1 text-muted"></i>
                    <h4 class="text-muted mt-3">Aucun autre revenu</h4>
                    <p class="text-muted">Cette p√©riode ne contient qu'un seul revenu.</p>
                    <a href="{{ path('app_income_new', {period: income.period.id}) }}" class="btn-modern btn-success-modern">
                        <i class="bi bi-plus-circle"></i>Ajouter un revenu
                    </a>
                </div>
            {% endif %}
        </div>
        {% endif %}
    </div>
</div>

<!-- Modal de suppression -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content" style="border-radius: 20px; border: none;">
            <div class="modal-header" style="border-bottom: 1px solid rgba(0,0,0,0.05);">
                <h5 class="modal-title">
                    <i class="bi bi-exclamation-triangle text-warning me-2"></i>
                    Supprimer le revenu
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>√ätes-vous s√ªr de vouloir supprimer ce revenu ?</p>
                <div class="alert" style="background: rgba(67, 233, 123, 0.1); color: #43e97b; border: 1px solid rgba(67, 233, 123, 0.2); border-radius: 12px;">
                    <strong>Revenu :</strong> {{ income.description }}<br>
                    <strong>Montant :</strong> {{ income.amount|number_format(2, ',', ' ') }}‚Ç¨<br>
                    <strong>Date :</strong> {{ income.date|date('d/m/Y') }}<br>
                    <strong>Cat√©gorie :</strong> {{ income.category.name }}
                </div>
                <div class="alert" style="background: rgba(220, 53, 69, 0.1); color: #dc3545; border: 1px solid rgba(220, 53, 69, 0.2); border-radius: 12px;">
                    <i class="bi bi-info-circle me-2"></i>
                    Cette action est irr√©versible et affectera les statistiques de la p√©riode.
                </div>
            </div>
            <div class="modal-footer" style="border-top: 1px solid rgba(0,0,0,0.05);">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal" style="border-radius: 12px;">
                    Annuler
                </button>
                <form method="post" action="{{ path('app_income_delete', {id: income.id}) }}" style="display: inline;">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ income.id) }}">
                    <button class="btn btn-danger" style="border-radius: 12px;">
                        <i class="bi bi-trash me-2"></i>Supprimer d√©finitivement
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block extra_styles %}
.income-info-section {
    padding: 0;
}

.info-item {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    padding: 1rem 0;
    border-bottom: 1px solid #f8f9fa;
}

.info-item:last-child {
    border-bottom: none;
}

.info-label {
    font-weight: 600;
    color: #6c757d;
    min-width: 100px;
}

.info-value {
    font-weight: 500;
    color: #2c3e50;
    text-align: right;
    flex: 1;
}

.amount-display {
    font-size: 1.5rem;
    font-weight: 700;
}

.amount-display.success {
    color: #28a745;
}

.actions-section {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
}

.action-btn {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem;
    border: 2px solid transparent;
    border-radius: 12px;
    background: #f8f9fa;
    transition: all 0.3s ease;
    cursor: pointer;
    text-decoration: none;
    color: inherit;
}

.action-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    color: inherit;
    text-decoration: none;
}

.action-btn.warning {
    background: rgba(255, 193, 7, 0.1);
    color: #ffc107;
}

.action-btn.warning:hover {
    border-color: rgba(255, 193, 7, 0.3);
    background: rgba(255, 193, 7, 0.15);
}

.action-btn.success {
    background: rgba(67, 233, 123, 0.1);
    color: #43e97b;
}

.action-btn.success:hover {
    border-color: rgba(67, 233, 123, 0.3);
    background: rgba(67, 233, 123, 0.15);
}

.action-btn.danger {
    background: rgba(220, 53, 69, 0.1);
    color: #dc3545;
}

.action-btn.danger:hover {
    border-color: rgba(220, 53, 69, 0.3);
    background: rgba(220, 53, 69, 0.15);
}

.action-btn i {
    font-size: 1.25rem;
    min-width: 20px;
}

.action-title {
    font-weight: 600;
    margin-bottom: 0.25rem;
}

.action-subtitle {
    font-size: 0.875rem;
    opacity: 0.8;
}

.stats-overview {
    padding: 1rem;
}

.stat-card-large {
    padding: 2rem 1rem;
    border-radius: 12px;
    transition: all 0.3s ease;
    margin-bottom: 1rem;
    text-align: center;
}

.stat-card-large:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
}

.stat-card-large.success {
    background: rgba(40, 167, 69, 0.1);
}

.stat-card-large.danger {
    background: rgba(220, 53, 69, 0.1);
}

.stat-card-large.info {
    background: rgba(23, 162, 184, 0.1);
}

.stat-card-large .stat-icon {
    font-size: 2.5rem;
    margin-bottom: 1rem;
}

.stat-card-large.success .stat-icon,
.stat-card-large.success .stat-value {
    color: #28a745;
}

.stat-card-large.danger .stat-icon,
.stat-card-large.danger .stat-value {
    color: #dc3545;
}

.stat-card-large.info .stat-icon,
.stat-card-large.info .stat-value {
    color: #17a2b8;
}

.stat-card-large .stat-value {
    font-size: 1.75rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
}

.stat-card-large .stat-label {
    font-size: 1rem;
    color: #495057;
    font-weight: 600;
    margin-bottom: 0.25rem;
}

.stat-card-large .stat-count {
    font-size: 0.875rem;
    color: #6c757d;
}

@media (max-width: 768px) {
    .info-item {
        flex-direction: column;
        gap: 0.5rem;
    }
    
    .info-label {
        min-width: auto;
    }
    
    .info-value {
        text-align: left;
    }
    
    .action-btn {
        padding: 0.75rem;
        gap: 0.75rem;
    }
    
    .stat-card-large {
        padding: 1.5rem 0.75rem;
    }
    
    .stat-card-large .stat-icon {
        font-size: 2rem;
    }
    
    .stat-card-large .stat-value {
        font-size: 1.5rem;
    }
}
{% endblock %} 