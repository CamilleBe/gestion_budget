{% extends 'base_modern.html.twig' %}

{% block title %}Revenus - Budget Manager{% endblock %}

{% block header %}
<div class="page-header">
    <h1 class="page-title">Mes Revenus üí∞</h1>
    <p class="page-subtitle">G√©rer toutes vos sources de revenus</p>
    <div class="d-flex gap-3 flex-wrap">
        <a href="{{ path('app_income_new') }}" class="btn-modern btn-success-modern">
            <i class="bi bi-plus-circle"></i>Nouveau revenu
        </a>
        <a href="{{ path('app_period_index') }}" class="btn-modern btn-info-modern">
            <i class="bi bi-calendar3"></i>Mes p√©riodes
        </a>
    </div>
</div>
{% endblock %}

{% block body %}
<div class="modern-card">
    <div class="card-header-modern">
        <h3 class="card-title-modern">
            <i class="bi bi-arrow-up-circle text-success me-2"></i>Liste des revenus
        </h3>
        <div class="d-flex gap-2 align-items-center">
            <span class="badge-modern" style="background: var(--success-gradient); color: white;">
                {{ incomes|length }} revenu{{ incomes|length > 1 ? 's' : '' }}
            </span>
            {% if incomes|length > 0 %}
                {% set totalIncome = 0 %}
                {% for income in incomes %}
                    {% set totalIncome = totalIncome + income.amount %}
                {% endfor %}
                <span class="badge-modern" style="background: rgba(40, 167, 69, 0.1); color: #28a745;">
                    Total: {{ totalIncome|number_format(0, ',', ' ') }}‚Ç¨
                </span>
            {% endif %}
        </div>
    </div>

    {% if incomes|length > 0 %}
        <div class="table-modern">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th><i class="bi bi-card-text me-2"></i>Description</th>
                        <th><i class="bi bi-currency-euro me-2"></i>Montant</th>
                        <th><i class="bi bi-calendar me-2"></i>Date</th>
                        <th><i class="bi bi-calendar3 me-2"></i>P√©riode</th>
                        <th><i class="bi bi-tag me-2"></i>Cat√©gorie</th>
                        <th><i class="bi bi-gear me-2"></i>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for income in incomes %}
                    <tr>
                        <td>
                            <strong>{{ income.description }}</strong>
                        </td>
                        <td>
                            <span class="fw-bold text-success">
                                +{{ income.amount|number_format(2, ',', ' ') }}‚Ç¨
                            </span>
                        </td>
                        <td>
                            <span class="text-muted">
                                {{ income.date|date('d/m/Y') }}
                            </span>
                        </td>
                        <td>
                            {% if income.period %}
                                <a href="{{ path('app_period_show', {id: income.period.id}) }}" 
                                   class="badge-modern" style="background: var(--primary-gradient); color: white; text-decoration: none;">
                                    {{ income.period.name }}
                                </a>
                            {% else %}
                                <span class="text-muted">-</span>
                            {% endif %}
                        </td>
                        <td>
                            {% if income.category %}
                                <span class="badge-modern" style="background: rgba(40, 167, 69, 0.1); color: #28a745;">
                                    {{ income.category.name }}
                                </span>
                            {% else %}
                                <span class="text-muted">Sans cat√©gorie</span>
                            {% endif %}
                        </td>
                        <td>
                            <div class="d-flex gap-2">
                                <a href="{{ path('app_income_show', {id: income.id}) }}" 
                                   class="btn btn-sm btn-outline-primary" title="Voir">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a href="{{ path('app_income_edit', {id: income.id}) }}" 
                                   class="btn btn-sm btn-outline-warning" title="Modifier">
                                    <i class="bi bi-pencil"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% else %}
        <div class="text-center py-5">
            <div class="mb-4">
                <i class="bi bi-wallet-fill display-1 text-muted"></i>
            </div>
            <h4 class="text-muted mb-3">Aucun revenu enregistr√©</h4>
            <p class="text-muted mb-4">Commencez par ajouter votre premier revenu pour suivre vos entr√©es d'argent.</p>
            <a href="{{ path('app_income_new') }}" class="btn-modern btn-success-modern">
                <i class="bi bi-plus-circle"></i>Ajouter mon premier revenu
            </a>
        </div>
    {% endif %}
</div>

{% if incomes|length > 0 %}
<div class="row">
    <div class="col-md-4">
        <div class="modern-card">
            <div class="card-header-modern">
                <h5 class="card-title-modern">
                    <i class="bi bi-graph-up me-2"></i>Statistiques
                </h5>
            </div>
            {% set totalThisMonth = 0 %}
            {% set totalLastMonth = 0 %}
            {% set thisMonth = 'now'|date('Y-m') %}
            {% set lastMonth = '-1 month'|date('Y-m') %}
            
            {% for income in incomes %}
                {% if income.date|date('Y-m') == thisMonth %}
                    {% set totalThisMonth = totalThisMonth + income.amount %}
                {% elseif income.date|date('Y-m') == lastMonth %}
                    {% set totalLastMonth = totalLastMonth + income.amount %}
                {% endif %}
            {% endfor %}
            
            <div class="row text-center">
                <div class="col-12 mb-3">
                    <div class="p-3 rounded" style="background: rgba(40, 167, 69, 0.1);">
                        <h6 class="text-success mb-1">Ce mois</h6>
                        <h4 class="text-success mb-0">+{{ totalThisMonth|number_format(0, ',', ' ') }}‚Ç¨</h4>
                    </div>
                </div>
                <div class="col-12 mb-3">
                    <div class="p-3 rounded" style="background: rgba(108, 117, 125, 0.1);">
                        <h6 class="text-muted mb-1">Mois dernier</h6>
                        <h4 class="text-muted mb-0">+{{ totalLastMonth|number_format(0, ',', ' ') }}‚Ç¨</h4>
                    </div>
                </div>
                <div class="col-12">
                    <div class="p-3 rounded" style="background: rgba(79, 172, 254, 0.1);">
                        <h6 class="text-info mb-1">Moyenne mensuelle</h6>
                        {% set averageMonth = incomes|length > 0 ? (totalIncome / (incomes|length > 30 ? 12 : 1)) : 0 %}
                        <h4 class="text-info mb-0">{{ averageMonth|number_format(0, ',', ' ') }}‚Ç¨</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-8">
        <div class="modern-card">
            <div class="card-header-modern">
                <h5 class="card-title-modern">
                    <i class="bi bi-clock-history me-2"></i>Revenus r√©cents
                </h5>
            </div>
            <div class="timeline">
                {% for income in incomes|slice(0, 5) %}
                <div class="d-flex align-items-center mb-3 p-3 rounded" style="background: #f8f9fa;">
                    <div class="me-3">
                        <div class="rounded-circle d-flex align-items-center justify-content-center" 
                             style="width: 40px; height: 40px; background: var(--success-gradient); color: white;">
                            <i class="bi bi-arrow-up"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1">
                        <h6 class="mb-1">{{ income.description }}</h6>
                        <small class="text-muted">
                            {{ income.date|date('d/m/Y') }}
                            {% if income.period %} ‚Ä¢ {{ income.period.name }}{% endif %}
                        </small>
                    </div>
                    <div class="text-end">
                        <span class="fw-bold text-success">+{{ income.amount|number_format(0, ',', ' ') }}‚Ç¨</span>
                    </div>
                </div>
                {% endfor %}
                
                {% if incomes|length > 5 %}
                <div class="text-center mt-3">
                    <small class="text-muted">Et {{ incomes|length - 5 }} autre{{ (incomes|length - 5) > 1 ? 's' : '' }} revenu{{ (incomes|length - 5) > 1 ? 's' : '' }}</small>
                </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endif %}
{% endblock %} 