{% extends 'base_modern.html.twig' %}

{% block title %}P√©riodes - Budget Manager{% endblock %}

{% block header %}
<div class="page-header">
    <h1 class="page-title">Mes P√©riodes üìÖ</h1>
    <p class="page-subtitle">G√©rer vos p√©riodes budg√©taires pour un suivi optimal</p>
    <div class="d-flex gap-3 flex-wrap">
        <a href="{{ path('app_period_new') }}" class="btn-modern">
            <i class="bi bi-plus-circle"></i>Nouvelle p√©riode
        </a>
        <a href="{{ path('app_dashboard') }}" class="btn-modern btn-info-modern">
            <i class="bi bi-graph-up"></i>Dashboard
        </a>
    </div>
</div>
{% endblock %}

{% block body %}
<div class="modern-card">
    <div class="card-header-modern">
        <h3 class="card-title-modern">
            <i class="bi bi-calendar3 me-2"></i>Liste des p√©riodes
        </h3>
        <span class="badge-modern" style="background: var(--info-gradient); color: white;">
            {{ periods|length }} p√©riode{{ periods|length > 1 ? 's' : '' }}
        </span>
    </div>

    {% if periods|length > 0 %}
        <div class="table-modern">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th><i class="bi bi-tag me-2"></i>Nom</th>
                        <th><i class="bi bi-calendar-range me-2"></i>P√©riode</th>
                        <th><i class="bi bi-arrow-up-circle text-success me-2"></i>Revenus</th>
                        <th><i class="bi bi-arrow-down-circle text-danger me-2"></i>D√©penses</th>
                        <th><i class="bi bi-wallet text-info me-2"></i>Solde</th>
                        <th><i class="bi bi-gear me-2"></i>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for period in periods %}
                    <tr>
                        <td>
                            <strong>{{ period.name }}</strong>
                        </td>
                        <td>
                            <span class="text-muted">
                                {{ period.startDate|date('d/m/Y') }} ‚Üí {{ period.endDate|date('d/m/Y') }}
                            </span>
                        </td>
                        <td>
                            <span class="fw-bold text-success">
                                +{{ period.totalIncome|number_format(0, ',', ' ') }}‚Ç¨
                            </span>
                        </td>
                        <td>
                            <span class="fw-bold text-danger">
                                -{{ period.totalExpenses|number_format(0, ',', ' ') }}‚Ç¨
                            </span>
                        </td>
                        <td>
                            {% set balance = period.balance %}
                            <span class="fw-bold {{ balance >= 0 ? 'text-success' : 'text-danger' }}">
                                {{ balance >= 0 ? '+' : '' }}{{ balance|number_format(0, ',', ' ') }}‚Ç¨
                            </span>
                        </td>
                        <td>
                            <div class="d-flex gap-2">
                                <a href="{{ path('app_period_show', {id: period.id}) }}" 
                                   class="btn btn-sm btn-outline-primary" title="Voir">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a href="{{ path('app_period_edit', {id: period.id}) }}" 
                                   class="btn btn-sm btn-outline-warning" title="Modifier">
                                    <i class="bi bi-pencil"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% else %}
        <div class="text-center py-5">
            <div class="mb-4">
                <i class="bi bi-calendar-x display-1 text-muted"></i>
            </div>
            <h4 class="text-muted mb-3">Aucune p√©riode cr√©√©e</h4>
            <p class="text-muted mb-4">Commencez par cr√©er votre premi√®re p√©riode budg√©taire pour organiser vos finances.</p>
            <a href="{{ path('app_period_new') }}" class="btn-modern">
